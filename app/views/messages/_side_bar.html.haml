.side_bar
  .side_bar__user-name
    .side_bar__user-name__top-items
      .side_bar__user-name__top-items__name
        masa
      .side_bar__user-name__top-items__icons
        = link_to '/groups/new', class: "icons__edit" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "icons__setting" do
          = icon('fas', 'cog')
        .side_bar__user-name__top-items__icons__far
  .side_bar__group-list
    - current_user.groups.each do |group|
      .side_bar__group-list__secound-items
        = link_to group_messages_path(group), class: "side-text" do
          .side_bar__group-list__secound-items__group-name
            = group.name
          .side_bar__group-list__secound-items__first-message
            = group.show_last_message