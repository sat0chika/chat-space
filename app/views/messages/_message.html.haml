.main_chat__message-list__all
  .main_chat__message-list__all__name-date
    .main_chat__message-list__all__name-date__name
      = message.user.name
    .main_chat__message-list__all__name-date__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message-list__all__message
    - if message.content.present?
      %p.main_chat__message-list__all__message
        = message.content
    = image_tag message.image.url, class: 'Message__image'if message.image.present?